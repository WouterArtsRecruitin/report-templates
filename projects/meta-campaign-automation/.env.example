# =============================================================================
# META CAMPAIGN AUTOMATION - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# =============================================================================
# META/FACEBOOK CONFIGURATION
# =============================================================================

# Facebook App credentials (from developers.facebook.com)
META_APP_ID=your_app_id_here
META_APP_SECRET=your_app_secret_here

# Long-lived Access Token (from Graph API Explorer)
# Required permissions: ads_read, ads_management, leads_retrieval, pages_read_engagement
META_ACCESS_TOKEN=your_access_token_here

# Ad Account ID (format: act_XXXXXXXXX)
META_AD_ACCOUNT_ID=act_your_account_id

# Pixel ID for conversion tracking
META_PIXEL_ID=1443564313411457

# Page ID (for Lead Ads)
META_PAGE_ID=your_page_id_here

# Webhook verification token (choose your own secret)
META_WEBHOOK_VERIFY_TOKEN=kandidatentekort_verify_2024

# Test Event Code (optional, for debugging in Events Manager)
# META_TEST_EVENT_CODE=TEST12345

# =============================================================================
# SLACK CONFIGURATION
# =============================================================================

# Slack Incoming Webhook URL (from Slack App settings)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Slack channel for lead notifications
SLACK_CHANNEL=#high-priority-intakes

# =============================================================================
# PIPEDRIVE CONFIGURATION
# =============================================================================

# Pipedrive API Token
PIPEDRIVE_API_TOKEN=your_pipedrive_token_here

# Pipeline ID for Meta leads
PIPEDRIVE_PIPELINE_ID=3

# Initial stage ID for new leads
PIPEDRIVE_STAGE_ID=15

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP Server settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=artsrecruitin@gmail.com
SMTP_PASS=your_app_password_here

# Email notifications recipient
NOTIFICATION_EMAIL=warts@recruitin.nl

# =============================================================================
# ZAPIER CONFIGURATION (OPTIONAL)
# =============================================================================

# Zapier webhook URL for additional automations
# ZAPIER_WEBHOOK_URL=https://hooks.zapier.com/hooks/catch/YOUR/WEBHOOK

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server port (default: 5000)
PORT=5000

# Debug mode (set to 'true' for development)
DEBUG=false

# =============================================================================
# CLAUDE AI (OPTIONAL - for APK report generation)
# =============================================================================

# Anthropic API Key (for AI-powered report generation)
# CLAUDE_API_KEY=your_claude_api_key_here
